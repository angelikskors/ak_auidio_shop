<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<VBox xmlns:fx="http://javafx.com/fxml" alignment="center" styleClass="background" stylesheets="@css/remove_byId.css"
      spacing="10">
    <children>
        <Label fx:id="whatToSearch" styleClass="label" stylesheets="@css/remove_byId.css"/>
        <TextField fx:id="id" styleClass="text-field" stylesheets="@css/remove_byId.css"/>
        <Button text="Result" onAction="#handleGetResult" styleClass="button" stylesheets="@css/remove_byId.css"/>
        <Label fx:id="result" styleClass="label-result" stylesheets="@css/remove_byId.css"/>
    </children>
    <padding>
        <Insets left="10" right="10" top="10" bottom="10"/>
    </padding>
</VBox>