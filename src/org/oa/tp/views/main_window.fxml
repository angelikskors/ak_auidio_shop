<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="400.0"
            prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8"
            fx:controller="org.oa.tp.controllers.MainWindowController">
    <top>
        <VBox>
            <children>
                <Label text="Welcome to Audio Shop" layoutX="200" layoutY="100"/>
                <Label text="Choose any database devoted to music" layoutX="200" layoutY="200"/>
            </children>
        </VBox>

    </top>

    <center>
        <VBox spacing="20.0">
            <children>
                <Button text="Albums" onAction="#handleAlbums"/>
                <Button text="Audios " onAction="#handleAudios"/>
                <Button text="Authors" onAction="#handleAuthors"/>
                <Button text="Cars " onAction="#handleCars"/>
                <Button text="Cats " onAction="#handleCats"/>
                <Button text="Customers" onAction="#handleCustomers"/>
                <Button text="Genres " onAction="#handleGenres"/>
                <Button text="Orders " onAction="#handleOrders"/>
                <Button text="Producers " onAction="#handleProducers"/>
            </children>
        </VBox>
    </center>
    <right>
        <VBox spacing="20.0">

        </VBox>
    </right>
    <left>

    </left>
    <bottom>
        <Label text="Let the music accompany you during the life trip"/>
    </bottom>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</BorderPane>
